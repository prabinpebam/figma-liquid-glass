{
  "name": "liquid-glass",
  "version": "1.0.0",
  "private": true,
  "description": "A Figma plugin that creates a liquid glass effect.",
  "main": "src/code.ts",
  "scripts": {
    "build": "tsc && cpx src/ui/**/* dist",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ts": "tsc -w",
    "watch:ui": "onchange \"src/ui/**/*\" -- cpx \"{{changed}}\" dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "figma",
    "plugin",
    "liquid glass"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.74.0",
    "cpx": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "typescript": "^5.4.0"
  },
  "overrides": {
    "braces": "^3.0.3",
    "micromatch": "^4.0.8",
    "minimatch": "^3.1.2"
  }
}
